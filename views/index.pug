                br
            .row
              .col
                .form-outline.form-white
                  input.form-control.bg-white.text-dark#typePassword(type="password")
                  label.form-label.text-dark(for="typePassword") Password
                br
            .row
              .col-9
              .col-3
                button#loginButton.btn.btn-lg.btn-success(type="button") Login
