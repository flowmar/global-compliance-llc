block content
    .container-fluid
      .row.mt-5
        .col-1
        .col-4.display-5.page-title Login
        .col-7
      .row.bg-dark.m-3.p-4
        .col-2
        .col-8.shadow-4-strong.bg-light.bg-opacity-25 
          .container
            br
            .row
              .col
                div.text-center Please enter your credentials.
                br
                br
            .row
              .col  
                .form-outline.form-white
                  input.form-control.bg-white.text-dark#typeUsername(type="text")
