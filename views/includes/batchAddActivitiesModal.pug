.modal.fade#batchAddActivitiesModal(aria-hidden="true" aria-labelledby="batchActivitiesModalLabel" tabindex="-4")
  .modal-dialog.text-dark.modal-lg
    .modal-content
      .modal-header(style="background-color: var(--main-bg-color);")
        h5.modal-title#batchActivitiesModalLabel.text-light Batch Add Activities
        button.btn-close.btn-close-white(data-mdb-dismiss="modal" type="button" aria-label="Close")
      .modal-body(style="background-color: var(--header-bg-color);")
        form(action="/licenses/batch/add/" method="POST" name="batchAddActivitiesForm" data-parsley-validate)#batchAddActivitiesForm.container
          input(id="marinerIDNumber" name="marinerIDNumber" type="text" hidden value=`${marinerID}`)
          //- input(id="gcLicenseActivityIDhidden" type="text" hidden)
          .row
            .col-8
              label.text-light(for="batchActivityTextBox") Enter activity:
              input.form-control(id="batchActivityTextBox" data-parsley-maxlength="255" type="text" name="batchActivity")
          .row.my-4
            .col-5
              label.text-light(for="batchActivityType") Activity Type:
              select.form-select(id="batchActivityType" name="batchActivityType")
                option(value="GCLicenseActivities") Global Compliance Activity
                option(value="GovtLicenseActivities") Government Activity
          .row.my-4
            .col-2.text-light Select Licenses:
            .col-8
              fieldset#licenseCheckboxes
                legend
            .col-2
      .modal-footer(style="background-color: var(--main-bg-color);")
        button.btn.m-2.text-white(id="save-batch-activities-button" style="background-color: var(--green-color); color:#4f4f4f;" value="Save" type='submit' form="batchAddActivitiesForm")
          i.bi.bi-save(style="font-size: .9rem;")
          span   &nbsp;Save
        button.btn.text-light(id="closeEditModal" data-mdb-dismiss="modal" type="button" style="background-color: var(--red-color);")
          i.bi.bi-x-square(style="font-size: .9rem;")
          span &nbsp;Close
